<% layout ("/layouts/boilerplate")%>
<body>
    <div class="row">
        <div class="col-8 offset-3 mt-3 mb-3">   
          <h3><%=listing.title%></h3>
       <div>

     <div class="card col-6 offset-0">
    
       <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
          <p class="card-text">
          
           <%=listing.description%><br>
           <%=listing.location%><br>
           &#8377; <%=listing.price.toLocaleString("en-IN")%><br>
         </p>
        </div>
   </div>
   <div class="btns">
        <form method="post" action="/listings/<%=listing._id%>?_method=DELETE">
           <button class="btn btn-dark  ">Delete</button>
         </form>
         <form method="get" action="/listings/<%= listing._id %>/edit">
          <button class="btn btn-dark offset-5 edit-btn">Edit</button>
         </form>
     <br><br> <br>
   
    </div>
 <hr>
 <div class="col-8 mt-3">
  <h2>Leave a Review</h2>
  <form action="/listings/<%=listing._id%>/reviews" method="post" novalidate class="needs-validation">
   <div class="mt-3 mb-3">
     <label id="rating" class="form-label">Rating</label>
     <input type="range" for="rating" name="review[rating]" min="1" max="5" class="form-range" >
   </div>
   <div class="mt-3 mb-3">
     <label id="comments" class="form-label" >Comments</label>
     <textarea name="review[comment]" for="comments" rows="5" cols="80" class="form-control" required></textarea>
     <div class="invalid-feedback">
      please add some comments for listings .
  </div>
  <br>
    <button class="btn btn-dark">Submit</button>
   
  </form>
 </div>
 
 
 
 
</div>
</div>
</body>
