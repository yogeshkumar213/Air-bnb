











/* Styling for #filters */
#filters {
  display: flex;
  flex-wrap: nowrap; /* Prevent wrapping */
  align-items: center;
  overflow-x: auto;
  margin-top: 1rem;
  padding: 0 1rem; /* Add padding to prevent content from touching edges */
  position: relative;
}

/* Styling for .filter */
.filter {
  text-align: center;
  margin-right: 1rem; /* Adjust margin for spacing */
  margin-left: 0.6rem;
  opacity: 0.7;
  flex: 0 0 auto; /* Prevent filters from shrinking */
  white-space: nowrap; /* Prevent text from wrapping */
}

/* Hover effect for .filter */
.filter:hover {
  opacity: 1; /* Adjust opacity */
  cursor: pointer;
  border-bottom: 2.5px solid rgba(66, 63, 63, 0.679);
  transform: scale(1.05);
  transition: 150ms ease all;
}

/* Adjust text size for .filter p */
.filter p {
  font-size: 0.8rem;
  white-space: nowrap; /* Prevent text from wrapping */
}

/* Styling for .tax-info */
.tax-info {
  display: none;
}

/* Styling for .tax-toggle */
.tax-toggle {
  border: 1px solid black;
  border-radius: 1rem;
  padding: 0.5rem; /* Adjusted padding */
  height: auto; /* Adjust height based on content */
  display: flex;
  align-items: center;
  max-width: 100%; /* Ensure it fits within its container */
  margin: 0 1rem 0.6rem 0; /* Adjust margin */
  font-size: 0.9rem; /* Adjusted font size */
  position: sticky;
  top: 0; /* Keeps it stuck to the top when scrolling */
  z-index: 1000; /* Ensure it overlaps other content */
  background-color: #fff;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  /* box-sizing: border-box;  */
  
  /* Add transition to smooth out stickiness */
  transition: top 0.3s ease;
  /* Adjust display and flex-wrap to handle small screen sizes */
  flex-wrap: nowrap;
  /* overflow-x: auto;  */
}

@media (max-width: 768px) {
  /* Handle small screen sizes for .tax-toggle */
  .tax-toggle {
    font-size: 10px;
    width: 30rem;
    margin-left: 1rem;
    display: flex;
    flex-wrap: nowrap;
    overflow: hidden; 
